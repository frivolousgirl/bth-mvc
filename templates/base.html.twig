
<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="{{ asset('img/glider.svg') }}" />
        {% block stylesheets %}
        {{
            encore_entry_link_tags("app")
        }}
        {% endblock %} {% block javascripts %}
        {{
            encore_entry_script_tags("app")
        }}
        {% block importmap %}{{
            importmap("app")
        }}{% endblock %} {% endblock %}
        <script src="script.js"></script>
    </head>

    <body>
        <header class="site-header">
            <span class="site-title"></span>
        </header>

        <nav>
            <ul>
                <li><a href="{{ path('home') }}">Home</a></li>
                <li><a href="{{ path('about') }}">About</a></li>
                <li><a href="{{ path('report') }}">Report</a></li>
                <li><a href="{{ path('lucky') }}">Lucky Number</a></li>
                <li><a href="{{ path('pig_start') }}">Pig Game</a></li>
                <li><a href="{{ path('card_start') }}">Card Game</a></li>
                <li><a href="{{ path('game') }}">21</a></li>
                <li><a href="{{ path('api') }}">API</a></li>
                <li><a href="{{ path('library') }}">Library</a></li>
            </ul>
        </nav>

        <main>
            {% block body %}{% endblock %}
        </main>

        <footer>
            <div class="footer-wrapper">
                <div class="footer">
                    <h2 class="footer-header">En footer</h2>
                    <p class="footer-email">
                        hello@hello.com
                    </p>
                    <p class="made-by">
                        Made by Isabel S.
                    </p>

                    <div class="social">
                        <ul>
                            <li>
                                <a href="{{ path('session_start') }}">Session</a>
                            </li>
                            <li>
                                <a href="{{ path('session_delete') }}">Destroy</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </footer>
    </body>
</html>
