{% extends "./base.html.twig" %} {% block title %}21{% endblock %} {% block
body%}

<h1>21</h1>
{% if gameOverMessage %}
    <p>{{ gameOverMessage }}</p>
{% endif %}
<form action="{{ path('game_action') }}" method="POST">
    {% if canTakeCard %}
        <button type="submit" name="action" value="take">Ta kort</button>
    {% endif %}
    {% if canStop %}
        <button type="submit" name="action" value="stay">Stanna</button>
    {% endif %}
    {% if not canTakeCard and not canStop %}
        <button type="submit" name="action" value="new">Nytt spel</button>
    {% endif %}
</form>
<div>
    <h2>Du: {{ player1.sumCardValues() }} poäng</h2>
    {% for card in player1.getCards() %}
        {{ card }} <br>
    {% endfor %}
</div>
<div>
    <h2>Banken: {{ player2.sumCardValues() }} poäng</h2>
    {% for card in player2.getCards() %}
        {{ card }} <br>
    {% endfor %}
</div>

{% endblock %}
